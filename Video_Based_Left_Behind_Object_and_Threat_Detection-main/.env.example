# Database Configuration
DATABASE_URL=sqlite:///./school_security.db

# MQTT Configuration for ESP32-CAM
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=school/camera

# Notification Settings
# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_RECIPIENTS=principal@school.com,security@school.com

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID_PRINCIPAL=your_chat_id
TELEGRAM_CHAT_ID_SECURITY=your_chat_id

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
ALERT_PHONE_NUMBERS=+1234567890,+0987654321

# Model Configuration
OBJECT_DETECTION_MODEL=yolov8n.pt
THREAT_DETECTION_MODEL=slowfast_r50
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# Tracking Configuration
LEFT_BEHIND_THRESHOLD_MINUTES=60
TRACKING_MAX_AGE=30
TRACKING_MIN_HITS=3

# Video Processing
VIDEO_FPS=30
FRAME_SKIP=2
VIDEO_RESOLUTION_WIDTH=640
VIDEO_RESOLUTION_HEIGHT=480

# ESP32-CAM Configuration
ESP32_CAM_COUNT=4
ESP32_CAM_STREAM_PORT=8080

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
WEB_DASHBOARD_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/system.log

